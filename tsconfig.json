{
  "compilerOptions": {
    "module": "es6",
    "outDir": "./dist/",
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "strict": true,
    "allowJs": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["client/**/*"],
  "exclude": ["node_modules", "dist", "coverage", ".github", "**/*.spec.ts"]
}
