{
    "apps": [{
            "name": "production",
            "script": ".",
            "env": {
                "NODE_ENV": "production"
            },
            "watch": true,
            "ignore_watch": [
                ".git",
                ".vscode",
                ".babelrc",
                ".dockerignore",
                ".editorconfig",
                ".eslintignore",
                ".eslintrc",
                ".gitignore",
                "README.md",
                "LICENSE",
