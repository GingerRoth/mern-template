                "coverage",
                "docs",
                "node_modules",
                "__tests__"
            ],
            "source_map_support": true
        },
        {
            "name": "staging",
            "script": ".",
            "env": {
                "NODE_ENV": "staging"
            },
            "watch": true,
            "ignore_watch": [
                ".git",
                ".vscode",
                ".babelrc",
                ".dockerignore",
                ".editorconfig",
                ".eslintignore",
                ".eslintrc",
                ".gitignore",
                "README.md",
                "LICENSE",
                "npm-debug.log",
                "coverage",
                "docs",
                "node_modules",
                "__tests__"
            ],
            "source_map_support": true
        }
    ]
